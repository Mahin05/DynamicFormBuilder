@model DynamicFormBuilder.Models.Form
@{
    ViewData["Title"] = "Form Preview";
}

<div class="container mt-4">
    <h2 class="mb-4">Preview: @Model.Title</h2>

    <form>
        @foreach (var field in Model.Fields)
        {
            <div class="mb-3">
                <label class="form-label">
                    @field.Label
                    @if (field.IsRequired)
                    {
                        <span class="text-danger">*</span>
                    }
                </label>
                <select class="form-select" disabled>
                    @foreach (var option in new List<string> { "Option 1", "Option 2", "Option 3" })
                    {
                        if (option == field.SelectedOption)
                        {
                            <option selected>@option</option>
                        }
                        else
                        {
                            <option>@option</option>
                        }
                    }
                </select>
            </div>
        }
        <a asp-action="Index" class="btn btn-secondary mt-3">Back</a>
    </form>
</div>
