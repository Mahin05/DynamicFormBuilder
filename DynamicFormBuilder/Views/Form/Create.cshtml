@{
    ViewData["Title"] = "Create Form";
}

<h2>Create Form</h2>


<form method="post" asp-action="Create" id="formBuilder">
    <div class="mb-3">
        <label for="formTitle" class="form-label">Form Title</label>
        <input type="text" name="title" id="formTitle" required>
    </div>    
    <div id="fieldsContainer" class="mb-3">
        <!-- dynamic fields will be appended here -->
    </div>
    <button type="button" id="addMoreBtn">Add More</button>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a class="btn btn-danger" asp-action="Index">Cancel</a>
</form>


